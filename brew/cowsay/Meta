name: cowsay
desc: Configurable speaking/thinking cow (and a bit more)
repo: hub.docker.com/brew/cowsay
base: alpine:3.4
deps: perl
from: https://github.com/schacon/cowsay.git
cmds:
- name: cowsay
  path: /usr/local/bin/cowsay
  opts:
  - interactive
- name: cowthink
  path: /usr/local/bin/cowsay
  opts:
  - interactive
